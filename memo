function copyRoleRequest() {
  const text = document.getElementById("role_output").textContent;
  if (!text) return alert("لا يوجد نص لنسخه.");
  navigator.clipboard.writeText(text);
  alert("✅ تم نسخ القرار بنجاح!");
}

